// settings
*
  margin 0
  padding 0

html, body
  height 100%

body
  background #fcfff9

// common classes
.hidden
  display none

// fonts
@font-face
  font-family 'DS-Digital'
  src url("../fonts/DS-DIGII.TTF") format('TrueType')

// contents
#contents
  height 100%
  color #333
  border-top 3px solid #000
  font-family sans-serif
  & > header
    height 37px
    background #000
    text-align center
    overflow hidden
    img
      height 37px
  &.connected
    border-top 3px solid #e8e8b3
// Counter
#counter
  position absolute
  top 40px
  right 0
  width 150px
  height 150px
  color #F15C56
  background #000
  border 2px solid #aaa
  font-size 70px
  font-family DS-Digital
  text-align center
  line-height 150px

// pages
#detail
  margin-right 156px
  padding 6px
  h1
    font-size 32px
    line-height 1.2
  .members
    margin 0 0 8px
    font-size 20px
    li
      display inline-block
      &:after
        content ','
        margin 0 .2em 0 0
      &:last-child
        &:after
          content ''
          margin 0
  .techs
    margin 6px 0 0
    color #0B70C8
    li
      display inline-block
      &:after
        content '/'
        margin 0 .5em
        color #333
      &:last-child
        &:after
          content ''
          margin 0
  .description
    margin 18px 0 0
    padding 8px
    border 1px solid #ccc
    border-radius 6px
    font-size 14px
    line-height 1.8

// paging
#paging
  margin 15px 0
  li
    display inline-block
    width 50%
    a
      display block
      text-align center

// summary
#summary
  h1
    display none
  table
    width 60%
    margin 15px auto
    border-collapse collapse
  th, td
    padding .2em
    border 1px solid #ccc
  th
    background #efefef
  td
    text-align right

// current
.screen
  #summary, #hee, #paging
    display none
  #detail, #counter
    display block
    
.master
  #hee
    display none
  #summary, #paging, #detail, #counter
    display block

// button
.button
  background #000
  &#contents
    border none
  & > header
    display none
  &.connected
    background #fff
  #hee
    display block
    width 100%
    height 100%
  #btnHee
    width 100%
    height 100%
    background-color #000
    background-image url('../img/btn_off.png')
    background-repeat no-repeat
    background-position center
    background-size contain
    -webkit-appearance none
    appearance none
    cursor pointer
  &.connected
    #btnHee
      background-image url('../img/btn.png')
  #detail, #summary, #counter, #paging
    display none

// detail
.detail
  #summary, #detail .counter
    display none
  #detail
    display block

// summary
.summary
  #hee, #detail
    display none
  #summary
    display block